<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.kutostrainingregimen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/circle_textview" />

        <activity android:name=".RootActivity" />
        <activity android:name=".Tips" />
        <activity
            android:name=".Overview"
            android:label="@string/title_activity_overview"
            android:theme="@style/AppTheme" />
        <activity android:name=".Minigame" />
        <activity android:name=".GameScreen" />
        <activity
            android:name=".Popup"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".TrainingRegimen"
            android:label="@string/title_activity_training_regimen">
        </activity>
        <activity android:name=".ShakeActivity" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>