<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#af3e3e3e" />
            <gradient android:angle="90" android:startColor="#3c3d3d" android:endColor="#535353"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#252525" />
            <solid android:color="#282828"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8c212121" />
            <gradient android:angle="90" android:startColor="#202020" android:endColor="#414141" />
        </shape>
    </item>
</selector>